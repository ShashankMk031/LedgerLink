<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<GridPane xmlns:fx="http://javafx.com/fxml" fx:controller="ledgerlink.gui.AccountController"
          hgap="10" vgap="10">
    <padding>
        <Insets top="20" right="20" bottom="20" left="20"/>
    </padding>

    <Label text="Account ID:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
    <TextField fx:id="accountIdField" GridPane.rowIndex="0" GridPane.columnIndex="1"/>
    <Label text="Customer ID:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
    <TextField fx:id="customerIdField" GridPane.rowIndex="1" GridPane.columnIndex="1"/>
    <Label text="Currency:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
    <TextField fx:id="currencyField" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

    <Button text="Open Account" onAction="#handleOpenAccount" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

    <Separator GridPane.rowIndex="4" GridPane.columnSpan="2"/>

    <Label text="Deposit Amount:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
    <TextField fx:id="depositField" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    <Button text="Deposit" onAction="#handleDeposit" GridPane.rowIndex="6" GridPane.columnIndex="1"/>

    <Label text="Withdraw Amount:" GridPane.rowIndex="7" GridPane.columnIndex="0"/>
    <TextField fx:id="withdrawField" GridPane.rowIndex="7" GridPane.columnIndex="1"/>
    <Button text="Withdraw" onAction="#handleWithdraw" GridPane.rowIndex="8" GridPane.columnIndex="1"/>

    <Label text="Transfer To (Account ID):" GridPane.rowIndex="9" GridPane.columnIndex="0"/>
    <TextField fx:id="transferToField" GridPane.rowIndex="9" GridPane.columnIndex="1"/>
    <Label text="Amount:" GridPane.rowIndex="10" GridPane.columnIndex="0"/>
    <TextField fx:id="transferAmountField" GridPane.rowIndex="10" GridPane.columnIndex="1"/>
    <Button text="Transfer" onAction="#handleTransfer" GridPane.rowIndex="11" GridPane.columnIndex="1"/>

    <Button text="Close Account" onAction="#handleCloseAccount" GridPane.rowIndex="12" GridPane.columnIndex="1"/>

    <Label fx:id="statusLabel" text="" GridPane.rowIndex="13" GridPane.columnIndex="0" GridPane.columnSpan="2"/>
</GridPane>
